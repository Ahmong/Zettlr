{
    "cSpell.words": [
        "zettlr",
        "pandoc",
        "zotero",
        "citeproc"
    ],
    "cSpell.language": "en-GB",
    "files.associations": {
        ".ztr-directory": "json"
    },

    "fileheader.customMade": {
        // 头部注释默认字段
        "Author": "Ahmong",
        "Date": "Do not edit", // 设置后默认设置文件生成时间
        "LastEditTime": "Do not edit", // 设置后，保存文件更改默认更新最后编辑时间
        "LastEditors": "Ahmong", // 设置后，保存文件更改默认更新最后编辑人
        "License": "GNU GPL v3",
        "custom_string_obkoro1": "---",
        "Description": "",
        "custom_string_obkoro2": "---",
        // "FilePath": "Do not edit", // 设置后，默认生成文件相对于项目的路径
    },
    "fileheader.configObj": {
        "dateFormat": "YYYY-MM-DD HH:mm",
        "wideSame": true, // 头部注释等宽设置
        "wideNum": 14,  // 头部注释字段长度 默认为13
        "language": {
            // js后缀文件
            "js": {
                "head": "/**",
                "middle": " * ",
                "end": " */",
                // 函数自定义注释符号：如果有此配置 会默认使用
                "functionSymbol": {
                  "head": "/******* ", // 统一增加几个*号
                  "middle": " * @",
                  "end": "**/"
                },
                "functionParams": "typescript" // 函数注释使用ts语言的解析逻辑
            },
            "ts": {
                "head": "/**",
                "middle": " * ",
                "end": " */",
                // 函数自定义注释符号：如果有此配置 会默认使用
                "functionSymbol": {
                  "head": "/******* ", // 统一增加几个*号
                  "middle": " * @",
                  "end": "**/"
                },
                "functionParams": "typescript" // 函数注释使用ts语言的解析逻辑
            },
            "vue": {
                "head": "<!--",
                "middle": " * ",
                "end": "-->",
                // 函数自定义注释符号：如果有此配置 会默认使用
                "functionSymbol": {
                  "head": "/******* ", // 统一增加几个*号
                  "middle": " * @",
                  "end": "**/"
                },
                "functionParams": "typescript" // 函数注释使用ts语言的解析逻辑
            },
        },
        // 默认注释  没有匹配到注释符号的时候使用。
        "annotationStr": { 
            "head": "/**",
            "middle": " * ",
            "end": " */",
            "use": true
        },
    },
    "editor.detectIndentation": true,
}
